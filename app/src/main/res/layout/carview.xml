<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="20dp"
    android:paddingTop="10dp">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:padding="12dp"
        app:cardCornerRadius="8dp"
        app:cardElevation="4dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/carImg"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:scaleType="centerCrop"
                android:src="@drawable/model" />

            <TextView
                android:id="@+id/txtCarName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:text="Car Name:"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/txtCarModel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:text="Car Model:"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/txtCarYear"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:text="Car Year:"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/txtCarPrice"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:text="Car Price:"
                android:textSize="16sp" />

            <ImageView
                android:id="@+id/imgQRcode"
                android:layout_width="match_parent"
                android:layout_height="83dp"
                app:srcCompat="@drawable/model" />

            <Button
                android:id="@+id/btnDeleteCar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:onClick="onDeleteCarClick"
                android:text="Delete Car" />

        </LinearLayout>

    </androidx.cardview.widget.CardView>
</RelativeLayout>
